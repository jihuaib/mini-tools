{
    "name": "mini-tools",
    "private": true,
    "version": "3.0.4",
    "main": "electron/main.js",
    "description": "MiniTools using Vue3 + Ant Design Vue + Electron",
    "author": {
        "name": "jihuaibin",
        "email": "jihuaib@163.com"
    },
    "repository": "https://github.com/jihuaib/mini-tools",
    "scripts": {
        "build": "vite build",
        "start": "vite",
        "dev": "concurrently -k \"cross-env BROWSER=none npm start\" \"wait-port 3000 && electron .\"",
        "pack": "electron-builder --dir",
        "dist": "electron-builder",
        "prepack": "npm run build",
        "predist": "npm run build",
        "format": "prettier --write .",
        "release": "electron-builder",
        "prerelease": "npm run build",
        "lint": "eslint --ext .js,.vue src electron",
        "lint:fix": "eslint --fix --ext .js,.vue src electron"
    },
    "build": {
        "appId": "MiniTools",
        "productName": "MiniTools",
        "copyright": "Copyright Â© 2025 ${author}",
        "files": [
            "dist/**/*",
            "electron/**/*",
            "package.json"
        ],
        "asar": false,
        "publish": {
            "provider": "github",
            "owner": "jihuaib",
            "repo": "mini-tools",
            "releaseType": "release"
        },
        "directories": {
            "buildResources": "electron/assets"
        },
        "win": {
            "target": [
                "msi",
                "nsis"
            ],
            "icon": "icon.ico",
            "artifactName": "${productName}-Setup-${version}.${ext}",
            "publisherName": "jihuaibin",
            "verifyUpdateCodeSignature": false
        },
        "nsis": {
            "allowToChangeInstallationDirectory": true,
            "oneClick": false,
            "perMachine": false
        }
    },
    "devDependencies": {
        "@babel/eslint-parser": "^7.23.10",
        "@babel/preset-env": "^7.27.1",
        "@vitejs/plugin-vue": "^4.2.3",
        "ant-design-vue": "^4.2.6",
        "concurrently": "^7.6.0",
        "cross-env": "^7.0.3",
        "electron": "^15.3.0",
        "electron-builder": "^22.14.13",
        "eslint": "^8.57.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-import": "^2.29.1",
        "eslint-plugin-vue": "^9.22.0",
        "lodash-es": "^4.17.21",
        "prettier": "^3.5.3",
        "vite": "^4.4.0",
        "vue": "^3.5.13",
        "vue-router": "^4.5.0",
        "vuex": "^4.1.0",
        "wait-port": "^1.1.0"
    },
    "dependencies": {
        "electron-log": "^5.3.3",
        "electron-store": "^8.2.0",
        "electron-updater": "^6.1.7",
        "ipaddr.js": "^2.1.0"
    }
}
